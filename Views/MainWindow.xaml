<Window
    x:Class="MinimalToastExample.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:views="clr-namespace:MinimalToastExample.Views"
    Title="Toast Demo"
    Width="600"
    Height="400"
    WindowStartupLocation="CenterScreen">

    <views:ToastHost Position="BottomRight">
        <Grid Background="#F9FAFB">
            <StackPanel
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
                <TextBlock
                    Margin="0,0,0,16"
                    HorizontalAlignment="Center"
                    FontSize="20"
                    FontWeight="SemiBold"
                    Text="Toast Demo" />
                <WrapPanel HorizontalAlignment="Center">
                    <Button Margin="4" Padding="12,8" Click="OnSuccess" Content="Success" />
                    <Button Margin="4" Padding="12,8" Click="OnError" Content="Error" />
                    <Button Margin="4" Padding="12,8" Click="OnWarning" Content="Warning" />
                    <Button Margin="4" Padding="12,8" Click="OnInfo" Content="Info" />
                    <Button Margin="4" Padding="12,8" Click="OnPromise" Content="Promise" />
                </WrapPanel>
            </StackPanel>
        </Grid>
    </views:ToastHost>
</Window>
