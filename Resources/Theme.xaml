<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Base colors -->
    <Color x:Key="Background-1">#FFFFFF</Color>
    <Color x:Key="Background-2">#FFFFFF</Color>
    <Color x:Key="Foreground-1">#1A1A1A</Color>
    <Color x:Key="Foreground-2">#71717A</Color>

    <!-- Toast accent colors -->
    <Color x:Key="Toast-Success">#22C55E</Color>
    <Color x:Key="Toast-Error">#EF4444</Color>
    <Color x:Key="Toast-Warning">#F59E0B</Color>
    <Color x:Key="Toast-Info">#3B82F6</Color>

    <!-- Toast brushes -->
    <SolidColorBrush x:Key="ToastBackground" Color="{StaticResource Background-2}" />
    <SolidColorBrush x:Key="ToastForeground" Color="{StaticResource Foreground-1}" />
    <SolidColorBrush x:Key="ToastForegroundSecondary" Color="{StaticResource Foreground-2}" />
    <SolidColorBrush x:Key="ToastSuccessAccent" Color="{StaticResource Toast-Success}" />
    <SolidColorBrush x:Key="ToastErrorAccent" Color="{StaticResource Toast-Error}" />
    <SolidColorBrush x:Key="ToastWarningAccent" Color="{StaticResource Toast-Warning}" />
    <SolidColorBrush x:Key="ToastInfoAccent" Color="{StaticResource Toast-Info}" />
    <SolidColorBrush x:Key="ToastLoadingAccent" Color="{StaticResource Foreground-2}" />

</ResourceDictionary>
